---
import HeartIcon from "../icons/HeartIcon.astro";
import Start2Icon from "../icons/Start2Icon.astro";
import StartIcon from "../icons/StartIcon.astro";
import PaletteIcon from "../icons/PaletteIcon.astro";
import PencilIcon from "../icons/PencilIcon.astro";
import ScissorsIcon from "../icons/ScissorsIcon.astro";
import StartsIcon from "../icons/StartsIcon.astro";
---

<div
    class="absolute inset-0 bg-linear-to-br from-rose-gold-light/30 via-background to-cream/50 pointer-events-none"
>
</div>
<div
    class="absolute top-20 right-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-pulse pointer-events-none"
>
</div>
<div
    class="absolute bottom-10 left-10 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse pointer-events-none"
    style="animation-delay: 1s;"
>
</div>

<div
    class="absolute top-1/4 left-1/4 text-primary/20 animate-bounce pointer-events-none"
    style="animation-duration: 3s;"
>
    <HeartIcon class="w-8 h-8" />
</div>
<div
    class="absolute top-1/3 right-1/4 text-gold/30 animate-bounce pointer-events-none"
    style="animation-duration: 4s; animation-delay: 0.5s;"
>
    <StartIcon class="w-6 h-6" />
</div>
<div
    class="absolute bottom-1/3 right-1/3 text-primary/15 animate-bounce pointer-events-none"
    style="animation-duration: 3.5s; animation-delay: 1s;"
>
    <Start2Icon class="w-10 h-10" />
</div>

<!-- Nuevos Elementos Decorativos -->


<div
    class="absolute top-20 right-1/3 text-rose-gold/20 animate-pulse pointer-events-none"
    style="animation-duration: 4.5s; animation-delay: 0.2s;"
>
    <StartsIcon class="w-10 h-10" />
</div>
<div
    class="absolute bottom-1/4 left-10 text-primary/10 animate-bounce pointer-events-none"
    style="animation-duration: 7s; animation-delay: 2s;"
>
    <ScissorsIcon class="w-10 h-10" />
</div>
<div
    class="absolute top-1/2 left-10 text-gold/15 animate-pulse pointer-events-none"
    style="animation-duration: 5.5s; animation-delay: 1s;"
>
    <HeartIcon class="w-6 h-6" />
</div>
