---
import MessageIcon from "../icons/MessageIcon.astro";

interface Props {
    title: string;
    description: string;
}
const { title, description } = Astro.props;
---

<section
    class="py-16 bg-linear-to-r from-primary/10 via-accent/10 to-primary/10"
>
    <div class="container">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="font-sans text-3xl font-bold text-foreground mb-4">
                {title}
            </h2>
            <p class="text-muted-foreground mb-6">
                {description}
            </p>
            <a
                href={`https://wa.me/51981713119?text=${encodeURIComponent(
                    `¡Hola! Me interesa conocer más sobre sus servicios.`,
                )}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-[#25D366] hover:bg-[#22c55e] text-white px-6 py-3 rounded-xl transition-all hover:shadow-lg hover:-translate-y-0.5"
            >
                <MessageIcon class="w-6 h-6" />
                <span class="font-semibold text-lg"
                    >Escríbenos por WhatsApp</span
                >
            </a>
        </div>
    </div>
</section>
